<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="default" extends="struts-default">
		<action name="addUserAction" class="action.addUserAction"
			method="post">
			<result name="success">/index.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		
		<action name="loginAction" class="action.loginAction"
			method="post">
			<result name="success">/list.jsp</result>
			<result name="error">/signup.jsp</result>
		</action>
		<action name="addContentAction" class="action.addContentAction" method = "post">
            <result name="success">/list.jsp</result>
            <result name="error">/error.jsp</result>
        </action>
        <action name="deleteContentAction" class="action.deleteContentAction" method = "post">
            <result name="success">/list.jsp</result>
            <result name="error">/error.jsp</result>
        </action>
        <action name="updateContentAction" class="action.updateContentAction" method = "post">
            <result name="success">/list.jsp</result>
            <result name="error">/error.jsp</result>
        </action>
	</package>
</struts>